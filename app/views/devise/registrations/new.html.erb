<% @meta_title="Peegin - Register A New Account" %>
<% @meta_description="Peegin Dictionary" %>

<section class="container all-peegin">
  <div class="col-md-12 formed">
    <div class="panel panel-default peegined">
      <div class="panel-body">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: false %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: false %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
        <p class="devise-share">
            <%= link_to('Login', new_user_session_path)  %> | <%= link_to('Login With Facebook', user_facebook_omniauth_authorize_path)  %> | <%= link_to "Forgot your password?", new_password_path(:user) %>
        </p>
      </div>
    </div>
  </div>
</section>
