<% @meta_title="Peegin - Define a new Peegin" %>
<% @meta_description="Peegin English Diction" %>


<section class="container all-peegin">
  <div class="col-md-4 hidden-xs col-sm-4 pull-right">


    <div class="panel panel-default side-panel">
      <div class="panel-body ">
        <h1 class="side-bar" id="side" >PEEGIN ENGLISH</h1><br>
        <h1 class="side-bar" id="side" >DICTIONARY</h1><br>
        <h1 class="side-bar" id="side" >IS DEFINED</h1><br>
        <h1 class="side-bar" id="side" >BY YOU</h1><br>
      </div>
    </div>



  </div>


  <div class="col-sm-8">



          <%= form_for @peegin do |f| %>

          <% if @peegin.errors.any? %>
            	<ul class="alert-alert error-val">
            		<% @peegin.errors.full_messages.each do |message| %>
            		<li><%= message %></li>
            		<% end %>
            	</ul>
            <% end %>

             <%= f.label :title, "Word Your Want To Define" %>
            <%= f.text_field :title, class:"tl-h", :placeholder => "eg. Epp" %> <br>
            <%= f.label :meaning, "Enter The Meaning Your Word" %>
            <%= f.text_area :meaning, class:"mn-h",:placeholder => "Means help, either to help some or ask for help" %> <br>
            <%= f.label :example, "Make a Sentence With Your Word" %>
            <%= f.text_area :example, class:"eg-h",:placeholder => "Aunty please epp me."%> <br>
            <%= f.submit "Sumit Your Peegin", class: "btn-submit btn btn-primary" %>
            <%= link_to "Back", peegins_path(@peegin), class: "btn btn-primary" %>
          <% end %>

  </div>

</section>
