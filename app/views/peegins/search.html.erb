<% @meta_title="Peegin - Search Result" %>
<% @meta_description="Peegin Dictionary" %>

<section class="container all-peegin">

  <%= render 'layouts/side_bar' %>


<% if params[:search].nil?%>
<%= "search for #{params[:search]} not found"%>
<%else%>
    <%@peegins.each do |peegin|%>
    <div class="col-md-8 col-sm-12 col-xs-12">


      <div class="panel panel-default peegined <%= controller_name %> <%= action_name %>">
          <div class="panel-body">
            <% if peegin.user == current_user || current_user.try(:admin?) %>
            <p class="pull-right"> <%= link_to 'Edit', edit_peegin_path(peegin) %> | <%= link_to 'Delete', peegin, method: :delete, data: { confirm: 'Are you sure you want to delet this Peegin?' }%> </p>
            <% end %>
            <%= link_to peegin do %>
            <h1 class="titled" style="color:#182634">
              <%=peegin.title %>
            </h1>
            <%end%>
            <br>
            <br>
            <p class="described">
            <%= simple_format(peegin.meaning) %>
            </p>
            <br>
            <p class="exampled">
              <i>
                <%=simple_format(peegin.example)%>
              </i>
            </p>
            <br>
            <% if peegin.origin? %>
            <p class="origin">
             <%="Origin: #{peegin.origin}"%>
            </p>
            <% end %>
            <br>
            <br>
            <%= link_to userpeegins_peegin_path(peegin.user) do %>
            <span style="color:#182634"><strong>By <%= peegin.user.name if peegin.user %></strong></span>
            <% end %>
            <br>
            <br>
            <ul class="hate">
               <li class="haterz">
                 <%= link_to like_peegin_path(peegin), method: :put do%>
                 <%= image_tag "thumbs_up", height: "25px", width: "26px" %>
                 <span class="score"><%= peegin.get_upvotes.size %></span>
                 <% end %>
               </li>
                <li class="haterz">
                  <%= link_to dislike_peegin_path(peegin), method: :put do%>
                 <%= image_tag "thumbs_down", height: "25px", width: "26px" %>
                 <span class="score"><%= peegin.get_downvotes.size %></span>
                 <% end %>
              </li>
            </ul>

            <ul class="socialed">
              <li class="socialed">
                <% if peegin.user == current_user %>
                <%= social_share_button_tag("I just added the meaning of \'#{peegin.title}' to Peegin Dictionary", :url => "http://peegin.com#{peegin_path(peegin)}", :image => ("http://amaniart.net/wp-content/uploads/2016/08/peegin.jpg"), via: "Peegin_") %>
                <%else%>
                <%= social_share_button_tag("Hey check out the meaning of \'#{peegin.title}' in Peegin Dictionary", :url => "http://peegin.com#{peegin_path(peegin)}", :image => ("http://amaniart.net/wp-content/uploads/2016/08/peegin.jpg"), via: "Peegin_") %>
              <% end %>
              </li>
              <li class="socialed">
                <strong>Share to</strong>
              </li>
            </ul>

          </div>


        </div>
  </div>

  <%end%>
  <%end%>
</section>

<section class="container">
  <%=will_paginate @peegins, renderer: BootstrapPagination::Rails %>
</section>
